<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="307dp"
            android:layout_height="65dp"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/giveaway"
            android:text="@string/title_settings"
            android:textSize="38sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/nombres"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="200dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Nombres"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <EditText
            android:id="@+id/eda"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="128dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nombres" />

        <EditText
            android:id="@+id/direccio"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="200dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="direccion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eda" />

        <EditText
            android:id="@+id/dia"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="128dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="dias"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/direccio" />

        <Button
            android:id="@+id/prueba"
            android:layout_width="494dp"
            android:layout_height="52dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="112dp"
            android:onClick="ejecutarServicio"
            android:text="Agregar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dia" />

        <Button
            android:id="@+id/prueba2"
            android:layout_width="497dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="108dp"
            android:text="Editar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/prueba" />

        <Button
            android:id="@+id/prueba3"
            android:layout_width="491dp"
            android:layout_height="49dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="112dp"
            android:text="Eliminar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/prueba2" />

        <Button
            android:id="@+id/prueba4"
            android:layout_width="488dp"
            android:layout_height="52dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="108dp"
            android:text="Actualizar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/prueba3" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>